// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(cuid())
  name         String
  email        String      @unique
  passwordHash String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  itineraries  Itinerary[]
}

model City {
  id        String       @id @default(cuid())
  name      String
  country   String
  timezone  String
  isActive  Boolean      @default(true)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  activities  Activity[]
  itineraries Itinerary[]
}

model Activity {
  id          String        @id @default(cuid())
  name        String
  description String
  type        ActivityType
  tags        String[]
  approxPrice Int?
  location    String?
  durationMin Int?
  startTime   String?
  endTime     String?
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  cityId      String
  city        City          @relation(fields: [cityId], references: [id])

  itineraryActivities ItineraryActivity[]
}

model Itinerary {
  id             String               @id @default(cuid())
  title          String
  description    String?
  startDate      DateTime
  endDate        DateTime
  interests      String[]
  budgetApprox   Int?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  userId         String
  user           User                 @relation(fields: [userId], references: [id])

  cityId         String
  city           City                 @relation(fields: [cityId], references: [id])

  days           ItineraryDay[]
}

model ItineraryDay {
  id          String               @id @default(cuid())
  dayNumber   Int
  date        DateTime

  itineraryId String
  itinerary   Itinerary            @relation(fields: [itineraryId], references: [id], onDelete: Cascade)

  activities  ItineraryActivity[]
}

model ItineraryActivity {
  id             String           @id @default(cuid())
  startTime      String?
  endTime        String?
  notes          String?

  dayId          String
  day            ItineraryDay     @relation(fields: [dayId], references: [id], onDelete: Cascade)

  activityId     String
  activity       Activity         @relation(fields: [activityId], references: [id])

  @@index([dayId])
  @@index([activityId])
}

enum ActivityType {
  GASTRONOMY
  ADVENTURE
  CULTURE
  NIGHTLIFE
  RELAX
}

